<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name = "Parallel Testing Suite" parallel="methods" thread-count="5">

    <listeners>
        <listener class-name="util.TestNGListeners"/>
        <listener class-name="retrylogic.AnnotationTransformer"/>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>

    <test name = "ValidatingMessagesAndErrorMessagesGoneTest">
        <parameter name="browser" value="firefox"/>
        <parameter name="isRemote" value="false" />
        <parameter name="platformName" value="Linux" />
        <classes>
            <class name = "tests.ValidatingErrorMessagesAndErrorMessagesGoneTest" />
        </classes>
    </test>

    <test name = "ValidatingSuccessMessageValidationTest">
        <parameter name="browser" value="firefox"/>
        <parameter name="isRemote" value="false" />
        <parameter name="platformName" value="Linux" />
        <classes>
            <class name = "tests.ValidatingSuccessMessageTest" />
        </classes>
    </test>

    <test name = "ValidatingErrorMessageValidationWithInvalidDataTest">
        <parameter name="browser" value="firefox"/>
        <parameter name="isRemote" value="false" />
        <parameter name="platformName" value="Linux" />
        <classes>
            <class name = "tests.ValidatingErrorMessagesWithInvalidDataTest" />
        </classes>
    </test>

    <test name = "ValidatingShopAndCartPageTest">
        <parameter name="browser" value="chrome"/>
        <parameter name="isRemote" value="false" />
        <parameter name="platformName" value="Linux" />
        <classes>
            <class name = "tests.ValidatingShopAndCartPageTest" />
        </classes>
    </test>

    <test name = "ValidatingSuccessMessageTests">
        <parameter name="browser" value="chrome"/>
        <parameter name="isRemote" value="false" />
        <parameter name="platformName" value="Linux" />
        <classes>
            <class name = "factories.SuccessMessageTest" />
        </classes>
    </test>
</suite>